@using YallaBaity.Resources
@model int
@{
    ViewBag.Title =  AppResource.lbOrderData;
}
<input id="orderId" value="@Model" type="hidden" />
<div class="container">
    <h2 class="mt-50">@AppResource.lbOrderData</h2>
    <div id="OrderData" class="mt-30">
       <div class="row">
           <div class="form-group col-6 col-sm-4">
               <label> @AppResource.lbOrderNumber  </label>
                <input type="text" class="input-style" id="orderCode" readonly />
           </div>

            <div class="form-group col-6 col-sm-4 offset-sm-4">
                <label> @AppResource.lbOrderStatus  </label>
                <input type="text" class="input-style" id="orderState" readonly />
            </div>

            <div class="form-group col-6 col-sm-4">
                <label> @AppResource.lbOrderDate  </label>
                <input type="text" class="input-style" id="orderDate" readonly />
            </div>

            <div class="form-group col-6 col-sm-4">
                <label>@AppResource.lbPaymentMethod  </label>
                <input type="text" class="input-style" id="orderPayment" readonly />
            </div>

            <div class="form-group col-6 col-sm-4" id="orderHandDateContainer" style="display:none">
                <label> @AppResource.lbDeliveryDate  </label>
                <input type="text" class="input-style" id="orderHandDate" readonly />
            </div>
       </div>
    </div>
    <div id="OrderFoods">
        <div id="OrderFoodsList"></div>
    </div>
    <div id="OrderAddress">
        <h2>@AppResource.lbAddress</h2>
        <div id="OrderAddressList">
            <div class="row">
                <div class="col-12 col-sm-4">
                    <ul>
                        <li><i class="far fa-id-badge"></i> &nbsp; <b>@AppResource.lbAddressName  :</b>  <span id="txtAddressName"></span></li>
                        <li><i class="fas fa-building"></i>&nbsp;<b>@AppResource.lbBuildingNo  :</b>  <span id="txtBuildingNo"></span></li>
                        <li><i class="fas fa-door-closed"></i>&nbsp;<b>@AppResource.lbApartmentNo  :  </b> <span id="txtApartmentNo"></span></li>
                        <li> <i class="fas fa-road"></i> &nbsp;  <b>@AppResource.lbStreet: </b> <span id="txtSteet"></span></li>
                        <li><i class="fas fa-layer-group"></i>&nbsp;<b>@AppResource.lbFloorNo: </b> <span id="txtFloor"></span></li>
                        <li><i class="fas fa-map-marker-alt"></i> &nbsp;<b>@AppResource.lbAddress: </b>   <span id="txtAddress"></span></li>
                    </ul>
                </div>
                <div class="col-12 col-sm-8">
                    <input id="lat" type="hidden" />
                    <input id="lng" type="hidden" />
                    <div class="map" id="map"></div>
                </div>
            </div>
        </div>
    </div>
</div>
  
@section bottom
    {
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBU0uc-KUAc29HmNH_mmoGpxN9J-bj3MEE&callback=initialize"></script>
    <script src="~/side/js/OrderView.js"></script>
}