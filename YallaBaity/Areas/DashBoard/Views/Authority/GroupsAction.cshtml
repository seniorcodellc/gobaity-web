<div class="modal fade" id="FormModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">title</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="groupId" value="0" />
                <div class="form-group">
                    <label for="groupAname">@AppResource.lbArabicName</label>
                    <input type="text" class="form-control" id="groupAname" placeholder=" @AppResource.lbArabicName  " data-requird="true" data-requird-message="@AppResource.lbRequirdMsg">
                </div>
                <div class="form-group">
                    <label for="groupEname"> @AppResource.lbEnglishName</label>
                    <input type="text" class="form-control" id="groupEname" placeholder="   @AppResource.lbEnglishName" data-requird="true" data-requird-message="@AppResource.lbRequirdMsg">
                </div>

                <div class="form-check form-check-flat form-check-primary">
                    <label class="form-check-label">
                        <input id="isActive" type="checkbox" class="form-check-input">
                        @AppResource.lbActive
                        <i class="input-helper"></i>
                    </label>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">@AppResource.lbClose</button>
                <button type="button" class="btn btn-primary" onclick="Save()">@AppResource.lbSave</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div> 